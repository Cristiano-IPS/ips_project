<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.Custom" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
       <!-- <item name="android:backgroundTint">@color/colorBackground</item>-->
        <item name="android:layout_margin">2dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHighlight">@color/colorMain</item>
        <item name="android:textColorLink">@color/colorMain</item>
        <item name="android:alertDialogIcon">@drawable/and</item>
    </style>

    <style name="Theme.AppCompat.Custom" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:layout_margin">2dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHighlight">@color/colorMain</item>
        <item name="android:textColorLink">@color/colorMain</item>
        <item name="android:alertDialogIcon">@drawable/and</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorMain</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/colorMain</item>
        <item name="hintTextAppearance">@font/tenor_sans</item>
    </style>

</resources>
